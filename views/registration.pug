doctype html
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Bookish - Best Store in India
  link(rel='shortcut icon' href='../static/images/logo.png' type='image/x-icon')
  link(rel='stylesheet' href='../static/style.css')
.main-Block
  .block-left
    img#register-img(src='../static/images/register.png' alt='')
  .block-right
    h2 Create Account
    form.main-form(action='/register' method="post")
      label(for='name') Your Name
      input#name.r-input(type='text' placeholder='First and Last name' name="name" required)
      label(for='Mobile') Mobile Number
      input#Mobile.r-input(type='text' placeholder='Your Mobile Number' name="mobile" required)
      label(for='email') Email
      input#email.r-input(type='text' placeholder='Your Email **optional' name="Email")
      label(for='Password') Password
      input#Password.r-input(type='password' name='Password' required)
      label(for='cPassword') Confirm Password
      input#Password.r-input(type='password' name='cPassword' required)
      button#smt-btn.primary-btn(type='submit') Register
    p or
    p
      | Existing Customer?
      a(href='/login') Login